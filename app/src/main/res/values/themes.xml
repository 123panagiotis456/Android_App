<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Your current app theme -->
    <style name="Theme.SupermarketManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.SupermarketManager.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.SupermarketManager</item>
    </style>

</resources>
