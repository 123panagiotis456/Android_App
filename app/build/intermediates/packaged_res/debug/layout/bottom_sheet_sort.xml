<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#191919">

    <!-- Floating Χ -->
    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_bg"
        android:src="@drawable/ic_close"
        android:tint="@android:color/white"
        android:elevation="10dp"
        android:padding="12dp"
        android:contentDescription="@string/close" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="66dp"
            android:paddingBottom="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Τίτλος -->
            <TextView
                android:id="@+id/tvSortTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ταξινόμηση"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"/>

            <!-- Επιλογές -->
            <RadioGroup
                android:id="@+id/rgSort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Προκαθορισμένο"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/teal_200"
                    android:textSize="18sp"
                    android:checked="true"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />

                <RadioButton
                    android:id="@+id/rbPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Τιμή πώλησης"
                    android:textColor="#FFFFFF"
                    android:buttonTint="@color/teal_200"
                    android:textSize="18sp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />


            </RadioGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Εφαρμογή"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:cornerRadius="8dp"
                app:backgroundTint="#00D19A"
                android:layout_marginTop="32dp"
                android:elevation="8dp"/>



        </LinearLayout>
    </ScrollView>
</FrameLayout>
