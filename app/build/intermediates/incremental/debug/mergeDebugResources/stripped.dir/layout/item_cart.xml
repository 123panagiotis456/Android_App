<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:backgroundTint="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ΠΑΝΩ ΜΕΡΟΣ: Εικόνα + badge + κουμπί -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/product_image" />

                <!-- Μαύρος κύκλος με ποσότητα -->
                <TextView
                    android:id="@+id/tvQuantityCircle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/quantity_circle" />

                <!-- Κουμπί + -->
                <ImageView
                    android:id="@+id/ivAdd"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="6dp"
                    android:src="@drawable/ic_add"
                    android:tint="@android:color/white" />

                <!-- Badge "1+1 Δώρο" -->
                <TextView
                    android:id="@+id/tvOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="6dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="1+1 Δώρο"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/offer_red_bg"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- ΚΑΤΩ ΜΕΡΟΣ: Πληροφορίες -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1C1C1E"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,76€"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/tvPricePerUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7,18€ / kg"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
